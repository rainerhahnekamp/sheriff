{
  "name": "@softarc/sheriff",
  "version": "0.0.1",
  "description": "Modularity for TypeScript Projects",
  "license": "MIT",
  "scripts": {
    "build:all": "npx nx run-many --target=build && chmod +x dist/packages/core/src/bin/main.js",
    "commit": "commit",
    "lint:all": "eslint ./packages",
    "link:sheriff": "npm run build:all && yalc publish dist/packages/core && yalc publish dist/packages/eslint-plugin && yalc add @softarc/sheriff-core @softarc/eslint-plugin-sheriff",
    "run:cli": "nx build core && chmod +x dist/packages/core/src/bin/main.js",
    "test": "vitest",
    "test:ci": "vitest -c vitest.config.ci.ts"
  },
  "author": {
    "name": "Rainer Hahnekamp",
    "email": "rainer.hahnekamp@gmail.com"
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.3.1",
    "@nx/js": "18.3.3",
    "@nx/workspace": "18.3.3",
    "@types/eslint": "^8.4.6",
    "@types/estree": "^1.0.0",
    "@types/node": "18.19.14",
    "@vitest/coverage-v8": "^2.0.3",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-unused-imports": "^4.0.0",
    "husky": "^9.0.11",
    "nx": "18.3.3",
    "prettier": "^3.2.5",
    "ts-node": "10.9.1",
    "typescript": "5.5.3",
    "typescript-eslint": "8.0.0-alpha.41",
    "vitest": "^2.0.3",
    "yalc": "^1.0.0-pre.53"
  }
}
